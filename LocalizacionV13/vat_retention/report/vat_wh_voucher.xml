<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_vat_wh_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout" t-lang="es_VE">
                        <!-- <div class="header">
                            <div class="row">
                                <div style="height:200px">
                                </div>
l                            </div>
                        </div> -->
                        <div class="page">
                            <table style="width:100%;">
                                <tr>
                                    <td style="width:30%;text-align:center;">
                                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s'%o.company_id.logo" alt="Logo" style="width:100px;"/>
                                    </td>
                                    <td style="width:70%;">
                                        <p style="text-align:center;">
                                            <b>COMPROBANTE DE RETENCION DEL IMPUESTO AL VALOR AGREGADO</b>
                                        </p>
                                        <p style="font-size:8px;text-align:center;">
                                            LEY IVA – ART. 11: “SERAN RESPONSABLES DEL PAGO DE IMPUESTO EN CALIDAD DE AGENTES DE RETENCION, LOS COMPRADORES O ADQUIRIENTES DE DETERMINADOS BIENES MUEBLES Y LOS RECEPTORES DE CIERTOS SERVICIOS A QUIENES LA ADMINISTRACION TRIBUTARIA DESIGNE COMO TAL”
                                        </p>
                                    </td>
                                    </tr>
                            </table>
                            <br/>
                            <table style="width:60%;float:right;border:1px solid #000;">
                                <tr style="border:1px solid #000;">
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                       N° COMPROBANTE
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        FECHA
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        PERIODO FISCAL
                                    </th>
                                </tr>
                                <tr>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="o.name"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-field="o.accouting_date" t-option='{"format":"d MMMM y"}'/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-field="o.accouting_date" t-option='{"format":"MMMM, YY"}'/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <!--Datos para Proveedores-->
                            <div class="page" t-if="o.type">
                                <t t-if="o.type == 'in_invoice'">
                                    <table style="width:100%;margin-top:70px;">
                                        <tr>
                                            <td colspan="3" style="text-align:center;">
                                                <b>AGENTE DE RETENCIÓN</b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                NOMBRE O RAZON SOCIAL
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:20%;">
                                                RIF
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                DIRECCIÓN FISCAL
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.company_id.name"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.company_id.vat"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <!-- <span t-esc="model.get_direction(d.company_id.partner_id)"/> -->
                                            </td>
                                        </tr>
                                    </table>
                                <br/>
                                    <!-- Table 2 -->
                                    <table style="width:100%;margin-top:30px;">
                                        <tr>
                                            <td colspan="3" style="text-align:center;">
                                                <b>DATOS DEL AGENTE BENEFICIARIO</b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                NOMBRE O RAZON SOCIAL
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:20%;">
                                                RIF
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                DIRECCIÓN FISCAL
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.partner_id.name"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.partner_id.vat"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <!-- <span t-esc="model.get_direction(d.partner_id)"/> -->
                                            </td>
                                        </tr>
                                    </table>
                                </t>
                            </div>

                            <!--Para Clientes-->
                            <div class="page" t-if="o.type">
                                <t t-if="o.type == 'out_invoice'">
                                    <table style="width:100%;margin-top:70px;">
                                        <tr>
                                            <td colspan="3" style="text-align:center;">
                                                <b>AGENTE DE RETENCIÓN</b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                NOMBRE O RAZON SOCIAL
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:20%;">
                                                RIF
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                DIRECCIÓN FISCAL
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.partner_id.name"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.partner_id.vat"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <!-- <span t-esc="model.get_direction(d.partner_id)"/> -->
                                            </td>
                                        </tr>
                                    </table>
                                    <br/>
                                    <table style="width:100%;margin-top:30px;">
                                        <tr>
                                            <td colspan="3" style="text-align:center;">
                                                <b>DATOS DEL AGENTE BENEFICIARIO</b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                NOMBRE O RAZON SOCIAL
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:20%;">
                                                RIF
                                            </th>
                                            <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;width:40%;">
                                                DIRECCIÓN FISCAL
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.company_id.name"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <span t-esc="o.company_id.vat"/>
                                            </td>
                                            <td style="text-align:center;border:1px solid #000;">
                                                <!-- <span t-esc="model.get_direction(d.company_id.partner_id)"/> -->
                                            </td>
                                        </tr>
                                    </table>
                                </t>
                            </div>
                            <br/>
                            <table width="100%;margin-top:30px;">
                                <tr>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Fecha Factura
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        N° de Factura
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        N° Control
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        N° Nota de Débito
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        N° Nota de Crédito
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Tipo Trans
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        N° Factura Afectada
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Total Compras con IVA
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Compras Exentas
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Base Imponible
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        % Alicuota
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        Impuesto IVA
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        % Retención
                                    </th>
                                    <th style="text-align:center;background-color:#A9F5F2;border:1px solid #000;">
                                        IVA Retenido
                                    </th>
                                </tr>
                                <tr  t-foreach="o.retention_line_ids" t-as="line">
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="line.invoice_id.invoice_date"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="line.invoice_id.invoice_number"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="line.invoice_id.invoice_ctrl_number"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <strong t-if="line.invoice_id.type == 'out_invoice'">1</strong>
                                        <strong t-if="line.invoice_id.type == 'in_invoice'">2</strong>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="'%.2f'%(line.invoice_id.amount_total)"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="'%.2f'%(line.invoice_id.amount_untaxed)"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <!-- <span t-esc="'%.2f'%(line.invoice_id.invoice_line_ids.tax_ids.amount)"/>% -->
                                        <span>16.00%</span>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="'%.2f'%(line.amount_vat_ret)"/>
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="'%.2f'%(line.retention_rate)"/>%
                                        
                                    </td>
                                    <td style="text-align:center;border:1px solid #000;">
                                        <span t-esc="'%.2f'%(line.retention_amount)"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="13" style="text-align:right;">
                                        <b>Total Impuesto Retenido</b>
                                    </td>
                                    <td style="text-align:center;">
                                        <b><span t-esc="'%.2f'%(o.vat_retentioned)"/></b>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <style>
                                hr {
                                    border-color: #000;
                                    width: 60%;
                                    margin-left: auto;
                                    margin-right: auto;
                                    margin-top: 0px;
                                    margin-bottom: 0px;
                                }
                            </style>
                            <table border="1" style="width:100%;margin-top:50px;">
                                <tr>
                                    <td style="width:50%;text-align:center;padding:0px;margin:0px;">
                                        <hr/>
                                        <b><span t-esc="o.company_id.name"/></b>
                                        <br/>
                                        <b>Firma Sello</b>
                                    </td>
                                    <td style="width:50%;text-align:center;padding:0px;margin:0px;">
                                        <hr/>
                                            <b><span t-esc="o.partner_id.name"/></b>
                                        <br/>
                                        <b>Firma Sello</b>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!-- <div class="footer">
                            <div class="row">
                                <div style="height:100px">
                                </div>
l                            </div>
                        </div> -->
                    </t>
                </t>
            </t>
    </template>








<!-- Paper format -->
    <record id="paperformat_vat_retention" model="report.paperformat">
        <field name="name">VAT Retention Report</field>
        <field name="orientation">Landscape</field>
        <field name="header_line" eval="False"/>
    </record>


<!-- Report action -->
    <report
            id="action_vat_report"
            string="Comprobante de IVA"
            model="vat.retention"
            report_type="qweb-pdf"
            name="vat_retention.template_vat_wh_voucher"
            file="vat_retention.template_vat_wh_voucher"
            paperformat="vat_retention.paperformat_vat_retention"
            />


</odoo>
